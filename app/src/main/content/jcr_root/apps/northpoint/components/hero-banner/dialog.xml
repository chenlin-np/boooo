<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Number Of Slide Show Image">
                <items jcr:primaryType="cq:WidgetCollection">
                    <slide-show-counts
                        jcr:primaryType="cq:Widget"
                        defaultValue="0"
                        fieldDescription="(Select number of image slideshow)"
                        fieldLabel="Number of Slide Show Images"
                        imageLabel="Image"
                        name="./slideshowcount"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <one
                                jcr:primaryType="nt:unstructured"
                                text="1"
                                value="1"/>
                            <two
                                jcr:primaryType="nt:unstructured"
                                text="2"
                                value="2"/>
                            <three
                                jcr:primaryType="nt:unstructured"
                                text="3"
                                value="3"/>
                            <four
                                jcr:primaryType="nt:unstructured"
                                text="4"
                                value="4"/>
                            <five
                                jcr:primaryType="nt:unstructured"
                                text="5"
                                value="5"/>
                            <six
                                jcr:primaryType="nt:unstructured"
                                text="6"
                                value="6"/>
                            <seven
                                jcr:primaryType="nt:unstructured"
                                text="7"
                                value="7"/>
                            <eight
                                jcr:primaryType="nt:unstructured"
                                text="8"
                                value="8"/>
                        </options>
                    </slide-show-counts>
                    <slideshow-timer
                        jcr:primaryType="cq:Widget"
                        fieldDescription="(Provide time in millisecond.Default (6000ms))"
                        fieldLabel="Time Interval"
                        imageLabel="Image"
                        name="./slideshowtimer"
                        xtype="textfield"/>
                    <sb-placement
                        jcr:primaryType="cq:Widget"
                        defaultValue="0"
                        fieldDescription="(Select spring board location)"
                        fieldLabel="Spring Board Position"
                        name="./spplacement"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <none
                                jcr:primaryType="nt:unstructured"
                                text="None"
                                value="none"/>
                            <right
                                jcr:primaryType="nt:unstructured"
                                text="Right"
                                value="right"/>
                            <bottom
                                jcr:primaryType="nt:unstructured"
                                text="Bottom"
                                value="bottom"/>
                        </options>
                    </sb-placement>
                </items>
            </tab1>
            <first-spring-board
                jcr:primaryType="cq:Panel"
                title="First Spring Broad Component">
                <items jcr:primaryType="cq:WidgetCollection">
                    <first-sb-title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Spring Board Title"
                        name="./firstsbtitle"
                        xtype="textfield"/>
                    <first-sb-des
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Spring Board Details"
                        name="./firstsbdesc"
                        xtype="textarea"/>
                    <first-sb-link
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Spring Board Url"
                        name="./firstsburl"
                        xtype="dynamicPathField"/>
                    <first-sb-new-window
                        jcr:primaryType="cq:Widget"
                        defaultValue="true"
                        fieldLabel="New Window"
                        inputValue="false"
                        name="./firstsbnewwindow"
                        type="checkbox"
                        xtype="selection"/>
                    <first-sb-button-txt
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Spring Board Button"
                        name="./firstsbbutton"
                        xtype="textfield"/>
                </items>
            </first-spring-board>
            <second-spring-board
                jcr:primaryType="cq:Panel"
                title="Second Spring Broad Component">
                <items jcr:primaryType="cq:WidgetCollection">
                    <second-sb-title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Spring Board Title"
                        name="./secondsbtitle"
                        xtype="textfield"/>
                    <second-sb-des
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Spring Board Details"
                        name="./secondsbdesc"
                        xtype="textarea"/>
                    <second-sb-link
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Spring Board Url"
                        name="./secondsburl"
                        xtype="dynamicPathField"/>
                    <second-sb-new-window
                        jcr:primaryType="cq:Widget"
                        defaultValue="false"
                        fieldLabel="New Window"
                        inputValue="false"
                        name="./secondsbnewwindow"
                        type="checkbox"
                        xtype="selection"/>
                    <second-sb-button-txt
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Spring Board Button"
                        name="./secondsbbutton"
                        xtype="textfield"/>
                </items>
            </second-spring-board>
        </items>
    </items>
</jcr:root>
