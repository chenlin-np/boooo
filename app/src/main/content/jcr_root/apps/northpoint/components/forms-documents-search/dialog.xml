<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <srch-location
                jcr:primaryType="cq:Widget"
                title="Search Path Configure"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <dam-path
                        jcr:primaryType="cq:Widget"
                        fieldDescription="The path where the documents will reside in DAM. (default: &quot;/content/dam/&amp;lt;site&amp;gt;/documents&quot; if empty)"
                        fieldLabel="Doc Assets Location in DAM"
                        name="./damPath"
                        xtype="pathfield"/>
                    <content-path
                        jcr:primaryType="cq:Widget"
                        fieldDescription="The root path for form pages in content.(default: current page)"
                        fieldLabel="Form Page Location in Content"
                        name="./content-path"
                        xtype="pathfield"/>
                </items>
            </srch-location>
        </items>
    </items>
</jcr:root>
